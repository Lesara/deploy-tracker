{% set route = app.request.attributes.get('_route') %}
{% set routeParams = app.request.attributes.get('_route_params') %}

{% if maxPage > 1 %}
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li class="page-item{% if page == 1 %} disabled{% endif %}">
        <a class="page-link" {% if page == 1 %}tabindex="-1"{% else %}href="{{ path(route, routeParams|merge({ 'page': page - 1 }))}}"{% endif %} aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      {% for i in 1..maxPage %}
        <li class="page-item{% if page == i %} active{% endif %}">
          <a class="page-link" href="{{ path(route, routeParams|merge({ 'page': i }))}}">
            {{ i }}
          </a>
        </li>
      {% endfor %}
      <li class="page-item{% if page == maxPage %} disabled{% endif %}">
        <a class="page-link" {% if page == maxPage %}tabindex="-1"{% else %}href="{{ path(route, routeParams|merge({ 'page': page + 1 }))}}"{% endif %} aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    </ul>
  </nav>
{% endif %}
