{% set route = app.request.attributes.get('_route') %}
{% set routeParams = app.request.attributes.get('_route_params') %}

{% if maxPage > 1 %}
  {# the number of first and last pages to be displayed #}
  {% set extremePagesLimit = 1 %}

  {# the number of pages that are displayed around the active page #}
  {% set nearbyPagesLimit = 1 %}

  <nav aria-label="Page navigation">
    <ul class="pagination">
    {% if page > 1 %}
      <li class="page-item">
        <a class="page-link" href="{{ path(route, routeParams|merge({ 'page': page - 1 }))}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>

      {% for i in range(1, extremePagesLimit) if (i < page - nearbyPagesLimit) %}
        <li class="page-item">
          <a class="page-link" href="{{ path(route, routeParams|merge({ 'page': i }))}}">
            {{ i }}
          </a>
        </li>
      {% endfor %}

      {% if extremePagesLimit + 1 < page - nearbyPagesLimit %}
        <li class="page-item">
          <a class="page-link">...</a>
        </li>
      {% endif %}

      {% for i in range(page - nearbyPagesLimit, page - 1) if (i > 0) %}
        <li class="page-item">
          <a class="page-link" href="{{ path(route, routeParams|merge({ 'page': i }))}}">
            {{ i }}
          </a>
        </li>
      {% endfor %}
    {% endif %}

    <li class="page-item active">
      <a class="page-link" href="{{ path(route, routeParams|merge({ 'page': page }))}}">
        {{ page }}
      </a>
    </li>

    {% if page < maxPage %}
      {% for i in range(page + 1, page + nearbyPagesLimit) if (i <= maxPage) %}
        <li class="page-item">
          <a class="page-link" href="{{ path(route, routeParams|merge({ 'page': i }))}}">
            {{ i }}
          </a>
        </li>
      {% endfor %}

      {% if (maxPage - extremePagesLimit) > (page + nearbyPagesLimit) %}
        <li class="page-item">
          <a class="page-link">...</a>
        </li>
      {% endif %}

      {% for i in range(maxPage - extremePagesLimit + 1, maxPage) if (i > page + nearbyPagesLimit) %}
        <li class="page-item">
          <a class="page-link" href="{{ path(route, routeParams|merge({ 'page': i }))}}">
            {{ i }}
          </a>
        </li>
      {% endfor %}

      <li class="page-item">
        <a class="page-link" href="{{ path(route, routeParams|merge({ 'page': page + 1 }))}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    {% endif %}
    </ul>
  </nav>
{% endif %}
