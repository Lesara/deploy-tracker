{% if items|length == 0 %}
  <div class="alert alert-warning">
    No data available.
  </div>
{% else %}
  <table class="table table-striped table-responsive-md border">
    <thead class="thead-light">
      <tr>
        <th scope="col">Application</th>
        <th scope="col" class="text-right">#</th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        <tr>
          <th scope="row">
            <a class="text-dark" href="{{ path('dashboard_application', {id: item.id, status: status}) }}">
              {{ item.name }}
            </a>
          </th>
          <td class="text-right">
            <a class="text-dark" href="{{ path('dashboard_application', {id: item.id, status: status}) }}">
              {{ item.count|number_format }}
            </a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}
