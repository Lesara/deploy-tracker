{% if items|length == 0 %}
  <div class="alert alert-warning">
    No data
  </div>
{% else %}
  <table class="table table-striped table-responsive-md">
    <thead class="thead-light">
      <tr>
        <th scope="col">Application</th>
        <th scope="col">#</th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        <tr>
          <th scope="row">
            <a class="text-dark" href="{{ path('dashboard_application', { 'id': item.id }) }}">
              {{ item.name }}
            </a>
            <a class="badge badge-dark" href="{{ item.projectUrl }}" target="_blank">
              repo
            </a>
          </th>
          <td>
            {{ item.count }}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endif %}
